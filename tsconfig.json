{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {"name": "next"}
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["webdriverio", "jest", "@wdio/globals"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/pages/_error.tsx", "tests/_e2e/specs/alerts.e2e.ts"],
  "exclude": [
    "node_modules",
    "src-tauri"
  ]
}
