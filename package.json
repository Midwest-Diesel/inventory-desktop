{
  "name": "inventory-desktop",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "tauri": "tauri",
    "preview": "vite preview",
    "dev": "run-p bundle:watch dev:vite",
    "dev:test": "cross-env VITE_NODE_ENV=test vite --port 3001",
    "dev:vite": "vite --port 3000",
    "bundle:watch": "node watch-bundle-scss.cjs",
    "build": "tsc -b && vite build",
    "start": "vite --port 3000",
    "lint": "run-s lint:ts lint:scss",
    "lint:ts": "eslint .",
    "lint:scss": "stylelint **/*.scss",
    "test": "run-s test:unit test:integration test:e2e",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration --maxWorkers 1",
    "test:e2e": "playwright test --workers 1 && rm -rf playwright-report ./test-results",
    "test:e2e:spec": "rm -rf playwright-report ./test-results && node src/tests/testSpec.mjs",
    "test:e2e:ui": "playwright test --workers 1 --ui && rm -rf playwright-report ./test-results",
    "publish": "sh ./publish.sh",
    "publish:staging": "sh ./publish.staging.sh"
  },
  "dependencies": {
    "@azure/msal-browser": "^3.23.0",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@googlemaps/markerclusterer": "^2.6.2",
    "@supabase/supabase-js": "^2.49.10",
    "@tanstack/react-query": "^4.40.1",
    "@tauri-apps/api": "^1.6.0",
    "@vis.gl/react-google-maps": "^1.4.0",
    "axios": "^1.12.1",
    "axios-cookiejar-support": "^6.0.4",
    "dotenv": "^16.4.5",
    "html-react-parser": "^5.2.5",
    "html-to-image": "^1.11.13",
    "jotai": "^2.7.0",
    "jsbarcode": "^3.11.6",
    "node-schedule": "^2.1.1",
    "pg": "^8.16.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.4.6",
    "react-router-dom": "^7.6.2",
    "tough-cookie": "^5.1.2",
    "vite-plugin-pages": "^0.33.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.55.1",
    "@tanstack/eslint-plugin-query": "^4.39.1",
    "@tauri-apps/cli": "^1.6.2",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/node-schedule": "^2.1.7",
    "@types/pg": "^8.15.4",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.5.2",
    "chokidar": "^4.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jsdom": "^27.0.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.70.0",
    "stylelint": "^16.13.2",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "^5",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.1.11",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
