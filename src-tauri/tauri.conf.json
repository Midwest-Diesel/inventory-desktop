{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Inventory",
    "version": "1.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": { "all": true },
      "window": { "all": true },
      "http": { "all": true },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/release/32x32.png",
        "icons/release/128x128.png",
        "icons/release/128x128@2x.png",
        "icons/release/icon.icns",
        "icons/release/icon.ico"
      ],
      "identifier": "com.tauri.mwd-inventory",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {"domain": "https://tauri.localhost/*", "windows": ["Handwritten"]},
        {"domain": "http://localhost:3000/*", "windows": ["Handwritten"]}
      ]
    },
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM3OTcxNDU2QTQ1OEI3NUEKUldSYXQxaWtWaFNYeDgrRWY1REMraHdSanJsMGdWSWZ5OHdNdHJRZXZjZTV0TUczdld5YTlVOGwK",
      "endpoints": [
        "https://raw.githubusercontent.com/Midwest-Diesel/inventory-desktop/refs/heads/main/latest.json"
      ],
      "dialog": false,
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Inventory",
        "width": 1500,
        "maximized": true
      }
    ]
  }
}
